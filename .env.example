# Frontend Environment Variables Template
# Copy this file to .env and fill in the values

# API URL (The base URL for your Django backend)
VITE_API_URL=http://your-production-url.com/api

# WebSocket URL (The URL for real-time chat and notifications)
VITE_WS_URL=ws://your-production-url.com/ws/chat
VITE_CHAT_URL=ws://your-production-url.com/ws/chat
VITE_NOTIFICATIONS_WS_URL=ws://your-production-url.com/ws/notifications

# AI Service URL (Optional)
VITE_AI_URL=http://your-production-url.com/ai

# Firebase Configuration (Required for notifications)
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=YOUR_PROJECT.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=YOUR_PROJECT.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_APP_ID
VITE_FIREBASE_VAPID_KEY=YOUR_VAPID_KEY
